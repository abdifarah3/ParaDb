@model IEnumerable<ProjetsFederes.Models.DetailCommande>

@{
    ViewData["Title"] = "DetailCommande";
}

<h1>DetailCommande</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixUnitaire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commande)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixUnitaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produit.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commande.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetailCommandeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetailCommandeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetailCommandeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
