@model IEnumerable<ProjetsFederes.Models.Fournisseur>

@{
    ViewData["Title"] = "Fournisseur";
}

<h1>Fournisseur</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FournisseurId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FournisseurId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FournisseurId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
